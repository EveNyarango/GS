<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter"
    android:orientation="vertical"
    tools:context=".PrivacyActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/lighter"
        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Status"
            android:textColor="@color/light"
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_baseline_arrow"
            android:drawableLeft="@drawable/ic_baseline_arrow"
            android:paddingStart="5dp"
            android:paddingLeft="5dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Privacy"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:textSize="25sp"
        android:padding="5dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="50dp"/>



        <Spinner
            android:id="@+id/spinnerPrivacy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Status"
        android:textColor="@color/white"
        android:background="@drawable/bg2"
        android:layout_margin="20dp"
        android:textStyle="bold"/>


</LinearLayout>